@model AdunbiKiddies.Models.Contact



<div id="ContactForm">
    <div id="Tempdetails">
        @TempData["Contact"]
    </div>

    @*<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@

    @using (Ajax.BeginForm("_Contact", "Contacts", new AjaxOptions() { UpdateTargetId = "ContactForm" }, new { @class = "form-horizontal", role = "form" }))
    {   @Html.AntiForgeryToken()

        <h4></h4>
            <hr />
                    <br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                     @*<h4 class="margin-bottom-1x">Or using form below</h4>*@
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="reg-fn">Name</label>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                           
                            @*<input class="form-control" type="text" id="reg-fn" required>*@
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="reg-fn">Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @*<input class="form-control" type="text" id="reg-fn" required>*@
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="reg-fn">Phone Number</label>
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                            @*<input class="form-control" type="text" id="reg-fn" required>*@
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="reg-fn">Comment</label>
                            @Html.TextAreaFor(m => m.Comment, new { @class = "form-control" })
                            @*<input class="form-control" type="text" id="reg-fn" required>*@
                        </div>
                    </div>
                   
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="reg-fn">Subsribe to our Newletter</label>
                            @Html.EditorFor(m => m.isSubcribed, new { @class = "form-control" })
                            @*<input class="form-control" type="text" id="reg-fn" required>*@
                        </div>
                    </div>
                    <div class="col-sm-6" style="margin-bottom:15px">
                        <input class="btn btn-primary margin-bottom-none" type="submit" name="Submit" value="Login">
                    </div>
    }


</div>
    
@Scripts.Render("~/bundles/jquery")
