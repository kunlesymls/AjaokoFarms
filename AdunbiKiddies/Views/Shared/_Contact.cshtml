@model AdunbiKiddies.Models.Contact



<div id="ContactForm">
    <div id="Tempdetails">
        @TempData["Contact"]
    </div>

    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @using (Ajax.BeginForm("_Contact", "Contacts", new AjaxOptions() { UpdateTargetId = "ContactForm" }))
    {
        @*@using(Html.BeginForm("_Contact","Contacts")) {*@ 
         <div>
        <div>Your Name</div>
        @Html.TextBoxFor(m => m.Name, new { @class = "input" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
        @*<input type="text" name="txtName" value="Name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Name';}">*@
        <div>
        <div>Your Email</div>
        @Html.TextBoxFor(m => m.Email, new { @class = "input" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
       <div>Your Comment</div> 
       <div>
        @Html.TextAreaFor(m => m.Comment, new { @class = "textarea" })
        @Html.ValidationMessageFor(m => m.Comment, "", new { @class = "text-danger" })
        </div>
        @*<textarea value="Message" name="txtComment" onfocus="this.value= '';" onblur="if (this.value == '') {this.value = 'Message';}">Message</textarea>*@
        @Html.DisplayNameFor(m => m.isSubcribed)
        @Html.CheckBoxFor(m => m.isSubcribed)

        @*<input type="checkbox" name="chkSubscribe" value=""> &nbsp; For Our NewsLetter<br />*@
        <input type="submit" value="Send" style="background-color:#81bd40">
        <div class="clearfix"></div>
    }

    </div>


@Scripts.Render("~/Template/assets/css")
@Scripts.Render("~/Templates/assets/js")
@Scripts.Render("~/bundles/jquery")
